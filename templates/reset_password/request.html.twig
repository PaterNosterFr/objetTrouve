{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Reset password
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialisation du mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre mail.
                <br>
                Si ce dernier est enregistré dans la base de donnée, un mail vous sera envoyé.
                <br>
                Il ne vous restera plus qu'à suivre les instructions données dans le mail.
            </small>
        </div>

        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
