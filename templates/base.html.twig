<!doctype html>
<html lang="fr-FR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

{# lien pour boostrap 5.1 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">

{# usage des CSS personalisés si besoin #}
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

{# icone dans l'onglet #}
    <link rel="icon" href="{{ asset('img/search.svg') }}">

    <title>{% block title %}Recherchez {% endblock %}</title>
</head>

<body>

    <header>
        <div class="container">
            <div class="row">
                <div class="col-4">
                <a href="{{ path('main_home') }}" class="logoSociete">
                    <h1>
                        <img src="{{ asset('img/logo_thouma.png') }}" alt="Logo de l'entreprise Thouma">Wanted <img src="{{ asset('img/missing.png') }}">
                    </h1>
                </a>
                </div>
                <div class="col">
                    {% include 'inc/nav.html.twig' %}
                </div>
            </div>
        </div>
    </header>

{# Petite div pour afficher les messages "addFlash" #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{# FIN DE LA DIV addFlash #}

    <main>
        <br>
        {% block body %}

        {% endblock %}
    </main>

    <footer>
        <br>
        <div>&copy; {{ "now"|date("Y") }} - Objets trouvés</div>
    </footer>

{# script JS pour usage de Bootstrap + Popper #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>
</html>